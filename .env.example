# Server Configuration
PORT=3000
NODE_ENV=development

# Twilio WhatsApp API
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# HuggingFace LLM (Secondary/Fallback)
HF_TOKEN=your_huggingface_token
HF_MODEL=meta-llama/Llama-3.3-70B-Instruct:novita
HF_BASE_URL=https://router.huggingface.co/v1

# Google Gemini (Primary)
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.5-flash
PRIMARY_LLM=gemini

# Chroma Vector Database
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=fact_check_sources

# Data Sources
PIB_FACT_CHECK_URL=https://factcheck.pib.gov.in/
WHO_ADVISORIES_URL=https://www.who.int/emergencies/disease-outbreak-news
RSS_FEEDS=https://pib.gov.in/allRss.aspx,https://www.who.int/rss-feeds/news-english.xml
NEWSDATA_API_KEY=afed
NEWSDATA_API_URL=https://newsdata.io/api/1/latest
# NewsAPI.org (Optional)
NEWSAPI_KEY=your_newsapi_key_here
NEWSAPI_URL=https://newsapi.org/v2/top-headlines

# SerpAPI for Google News# SerpAPI Configuration
SERPAPI_KEY=your_serpapi_key
SERPAPI_SEARCH_ENGINE=google
SERPAPI_NEWS_RESULTS_LIMIT=10

# RapidAPI Google News Scraper
RAPIDAPI_KEY=your_rapidapi_key

# Tavily AI Search
TAVILY_API_KEY=your_tavily_api_key

# Application Settings
MAX_CLAIMS_PER_MESSAGE=3
CONFIDENCE_THRESHOLD=0.7
CACHE_TTL_HOURS=24

# Tunneling Configuration (Optional)
# For ngrok: Get authtoken from https://ngrok.com (free signup)
NGROK_AUTHTOKEN=your_ngrok_authtoken_here

# For localtunnel: Set a custom subdomain (optional, may not always be available)
LT_SUBDOMAIN=crisis-cred
